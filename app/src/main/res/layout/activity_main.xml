<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <fragment
         android:id="@+id/static_frag1"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
            android:name="com.example.demofragmentlab6.StaticFragment1"
            tools:layout="@layout/fragment_static1"
            />

        <fragment
            android:id="@+id/static_frag2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:name="com.example.demofragmentlab6.StaticFragment2"
            tools:layout="@layout/fragment_static2"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>